<%if @person.errors.any?%>
  <div class="errors">
    <% @person.errors.each do |attribute, message|%>
      <div class='message'>
        <strong><%= "#{attribute.capitalize} #{message}"%></strong>
      </div>
    <%end%>
  </dvi>
<%end%>
<br>

<div class="person_form">
  <%= form_for(@person, multipart: true) do |f|%>
  <div>
      <%= f.label :name, @name%>
      <%= f.text_field :name%>
  </div>
  <div>
      <%= f.label :photo, "Picture"%>
      <%= f.file_field :photo%>
    </div>
  <div>
    <%= f.label :age%>
    <%= f.number_field :age%>
  </div>
  <div>
    <%= f.hidden_field :famous, :value => @famous %>
  </div>
  <div class='radio_button'>
    <%= f.label :male%>
    <%= f.radio_button :male, true %>
    <%= f.label :female%>
    <%= f.radio_button :male, false %>
  </div>
  <div>
    <%= f.label :race%>
    <div class="select">
      <%= f.collection_select(:race_id, Race.order(:name), :id, :name) %>
    </div>
  </div>
  <div>
    <%= f.label :city%>
    <%= f.text_field :city%>
  </div>
  <div>
    <%= f.label :state%>
    <div class="select">
      <%= f.collection_select(:state_id, State.order(:name), :id, :name) %>
    </div>
  </div>
  <div class="">
    <%= f.submit @text %>
  </div>
    <%end%>
</div>
