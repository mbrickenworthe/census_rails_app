<div class="people_show">
  <ul><%@people.each do |person|%>
    <li class='single_person'>
      <div id="person_name">Name: <%= person.name%></div>
      <div id="person_age">Age: <%= person.age%></div>
      <div id="person_race">Race: <%= person.race.name%></div>
      <div id="person_sex">Gender: <%= person.sex%></div>
      <div id="person_state">Location: <%= person.address_string%></div>
    </li>
    <div class="edit">
      <a href='<%= edit_person_path(person)%>' class= "animsition-link">
        <img alt="Edit" height="24" src="/assets/photos/pencil.png" width="24" />
      </a>
      <%if !(person.active_user)%>
        <%= link_to image_tag(@delete_image, size: "24x24", alt: "Delete"), delete_person_path(person), method: :delete  %>
      <%end%>
    </div>
  <%end%></ul>
</div>

<button>
  <a href='<%= new_person_path%>' class= "animsition-link">New Person</a>
</button>