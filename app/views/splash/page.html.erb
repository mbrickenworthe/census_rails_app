

<% content_for :javascript_styles do %>
  <%=javascript_include_tag 'splash', 'data-turbolinks-track' => true %>
<%end%>
<div class="main-title">
<h1>Welcome to the <div id="name">Uniqueness App</div></h1>
<h3>How unique are you?</h3>
  <p><%if !(signed_in?)%> Please Log In Using the Link Above to Add Your Family Members and See Your Uniqueness Data!</p>
    <%end%>

<% if signed_in? && created_first_admin %>
  <% create_first_user_data %>
<% else %>
<% end %>
</div>

  <div class="left">
    <h2>Famous People</h2> 
      <%= link_to "Add New Famous Person", new_famous_person_path, :class => "button animsition-link"%>
    <div>
      <%@famous_people.each do |person|%>
        <h3><%= person.name%></h3>
          <div class="picture">
            <%= image_tag(person.photo.url(:square))%>
          </div>
        <p><strong>Age:  </strong><%= person.age%></p>
        <p><strong>Race:  </strong><%= person.race.name%></p>
        <p><strong>Location:  </strong><%= person.address_string%></p>
      <%end%>
    </div>
    </div>
  </div>
  <div class="right">
      <div>
        <%if signed_in? %>
        <h2>Family Members</h2> 
          <%@family_people.each do |person|%>
            <h3><%= person.name%></h3>
              <div class="picture">
                <%= image_tag(person.photo.url(:square))%>
              </div>
            <p><%= person.age%></p>
            <p><%= person.race.name%></p>
            <p><%= person.address_string%></p>
          <%end%>
        <%end%>
      </div>
      <%if signed_in?%>
        <div class="button">
          <%= link_to "Add Family Member", new_person_path, :class => "animsition-link" %>
        </div>
      <%end%>
  </div>